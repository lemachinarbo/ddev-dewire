# STAGING_SSH_USER=your-ssh-user
# STAGING_DB_HOST=localhost
# STAGING_DB_USER=example_user
# STAGING_DB_NAME=example_db
# STAGING_DB_PASS=password1234
# STAGING_HTACCESS_OPTION=SymLinksifOwnerMatch
